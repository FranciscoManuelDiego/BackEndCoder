<div class="bg-gray-100 flex items-center justify-center h-screen">
    <div class=" p-8 rounded-lg shadow-lg max-w-sm w-full">
        <div class="flex justify-center mb-6">
        </div>
        <h2 class="text-2xl text-gray-light font-semibold text-center mb-4">Create a new account</h2>
        <p class=" text-gray-light text-center mb-6">Enter your details to register.</p>
        {{!-- This is to post the information proceed --}}
        <form action="/register" method="POST">
            <div class="mb-4">
                <label for="fullName" class=" text-gray-light block text-gray-700 text-sm font-semibold mb-2">Full Name *</label>
                <input type="text" name="full_name" class="form-input w-full px-4 py-2 border rounded-lg text-gray-700 focus:ring-blue-500" required placeholder="James Brown">
            </div>
            <div class="mb-4">
                <label for="email" class="text-gray-light block text-gray-700 text-sm font-semibold mb-2">Email Address *</label>
                <input type="email" name="email" class="form-input w-full px-4 py-2 border rounded-lg text-gray-700 focus:ring-blue-500" required placeholder="hello@alignui.com">
            </div>
            <div class="mb-4">
                <label for="email" class="text-gray-light block text-gray-700 text-sm font-semibold mb-2">Username *</label>
                <input type="text" name="username" class="form-input w-full px-4 py-2 border rounded-lg text-gray-700 focus:ring-blue-500" required placeholder="User">
            </div>
            <div class="mb-6">
                <label for="password" class=" text-gray-light block text-gray-700 text-sm font-semibold mb-2"  >Password *</label>
                <input type="password" name="password" class="form-input w-full px-4 py-2 border rounded-lg text-gray-700 focus:ring-blue-500" required placeholder="••••••••">
            </div>
            <button type="submit" class="w-full bg-blue  text-gray-light px-4 py-2 rounded-lg hover:bg-blue focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">Register</button>
            <p class=" text-gray-light text-xs text-center mt-4">
                By clicking Register, you agree to accept Apex Financial's
                <a href="#" class="text-blue hover:underline">Terms and Conditions</a>.
            </p>
            <div class="mt-6">
                <p class="text-blue w-full">
                <a href="login">
                    Already have an account? Sign here.
                </a>
                </p>
            </div>
        </form>
    </div>
</div>